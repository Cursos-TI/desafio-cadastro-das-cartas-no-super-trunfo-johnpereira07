#include<stdio.h>

int main(){

 
 char cidade1[1],cidade2[1];
 char estado1[2],estado2[2];
 char codcar1[4],codcar2[4];
 int populacao1,populacao2;
 int ponturismo1,ponturismo2;
 float pib1,pib2,area1,area2;

      //carta 01

      printf("Carta 01  \n Digite o estado:  \n");
      scanf("%s",&estado1);


      printf("Nome da cidade:  \n");
      scanf("%s",&cidade1);

      printf("Carta 01 \nDigite o codigo da carta: \n");
      scanf("%s",&codcar1);

      printf("Digite a população: \n");
      scanf("%d",&populacao1);

      printf("Quantos pontos turisticos tem:  \n");
      scanf("%d",&ponturismo1);

      printf("digite o PIB:  \n");
      scanf("%f",&pib1);

      printf("Digite a área: \n");
      scanf("%f",&area1);


      //carta 02


      printf("Carta 02 \n Digite o estado:  \n");
      scanf("%s",&estado2);

      printf("Nome da cidade:  \n");
      scanf("%s",&cidade2);

      printf("Carta 02 \n Digite o codigo da carta: \n");
      scanf("%s",&codcar2);

      printf("Digite a população: \n");
      scanf("%d",&populacao2);

      printf("Quantos pontos turisticos tem:  \n");
      scanf("%d",&ponturismo2);

      printf("digite o PIB:  \n");
      scanf("%f",&pib2);

      printf("Digite a área: \n");
      scanf("%f",&area2);

      //cartas

      printf("Carta 01\n  Código da carta: %s  \n  Estado: %s  \n Cidade: %s  \n  População: %d \n",codcar1,estado1,cidade1,populacao1);
      printf("Area: %f km² \n PIB : %f Bilhões de Reais \n Pontos Turisticos: %d \n",area1,pib1,ponturismo1);



      printf("Carta 02\n  Código da carta: %s  \n  Estado: %s  \n Cidade: %s  \n  População: %d \n",codcar2,estado2,cidade2,populacao2);
      printf("Area: %f Km² \n PIB : %f Bilhões de Reais \n Pontos Turisticos: %d \n",area2,pib2,ponturismo2);


      return 0;

}
